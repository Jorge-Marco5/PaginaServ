            text-decoration: none;
        }

        .header a:hover {
            text-decoration: underline;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #2E1A47;
            color: #FFF;
            padding: 10px 0;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(14, 1, 1, 0.2);
            z-index: 1;
            top: 100%;
            left: 0;
            border-radius: 5px;
        }

        .dropdown-content a {
            color: #FFF;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            font-size: 16px;
        }

        .dropdown-content a:hover {
            background-color: #4A2A76;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .right-icon button {
            background-color: transparent;
            border: none;
            padding: 0;
        }

        .right-icon img {
            width: 25px;
            border-radius: 50%;
            cursor: pointer;
        }

        h1 {
            text-align: center;
            font-family: serif;
            font-size: 48px;
            margin-top: 20px;
        }

        .menu {
            display: flex;
            justify-content: center;
            gap: 30px;
            margin: 20px 0;
        }

        .menu button {
            background-color: transparent;
            color: #FFD700;
            border: 2px solid #FFD700;
            padding: 10px 30px;
            font-size: 18px;
            font-weight: bold;
            border-radius: 20px;
            cursor: pointer;
        }

        .menu button:hover {
            background-color: #FFD700;
            color: #000;
        }

        .table-container {
            margin: 0 auto;
            width: 90%;
            max-width: 1000px;
            padding: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            display: none;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #444;
            color: #FFF;
        }

        td {
            background-color: #555;
            color: #FFF;
        }

        .food-img {
            width: 100px;
            height: auto;
            border-radius: 5px;
        }

        .note {
            font-size: 14px;
            color: #FF6347;
            position: absolute;
            bottom: 10px;
            left: 10px;
        }

        .active {
            display: table;
        }
    </style>
</head>
