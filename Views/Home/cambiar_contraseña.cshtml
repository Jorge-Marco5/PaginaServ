@model MvcMovie.Models.Usuario

@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cambiar</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #000;
            color: #FFF;
            text-align: center;
            margin: 0;
            padding: 0;
        }

        .header {
            background-color: #990000;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .header .left-links,
        .header .right-icon {
            display: flex;
            align-items: center;
        }

        .header a {
            color: #FFF;
            font-size: 18px;
            margin: 0 15px;
            text-decoration: none;
            cursor: pointer;
        }

        .header a:hover {
            text-decoration: underline;
        }

        .header .right-icon img {
            width: 20px;
            vertical-align: middle;
        }

        .logo img {
            width: 125px;
            margin-top: 20px;
        }

        .change-password-container {
            margin-top: 30px;
        }

        h1 {
            font-size: 24px;
            font-weight: normal;
            margin-bottom: 30px;
        }

        .input-field {
            width: 80%;
            max-width: 300px;
            padding: 8px;
            margin: 10px 0;
            font-size: 16px;
            background-color: #d3d3d3;
            border: none;
            border-radius: 5px;
        }

        .accept-button {
            background-color: #4d6460;
            color: #FFF;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            margin-top: 20px;
            border-radius: 20px;
            width: 15%;
        }

        .accept-button:hover {
            background-color: #3b4f4a;
        }

        label {
            display: block;
            text-align: left;
            margin: 0 auto;
            width: 80%;
            max-width: 300px;
        }
    </style>
</head>
<body>

    <div class="header">
        <div class="left-links">
            <a asp-controller="Home" asp-action="home">Inicio</a>
        </div>
        <div class="right-icon">
            <a href="#perfil"><img src="@Url.Content("~/images/Account/contacto.png")" alt="Perfil"></a>
        </div>
    </div>

    <div class="logo">
        <img src="@Url.Content("~/images/Account/logo.png")" alt="Nour">
    </div>

    <div class="change-password-container">

    @if (TempData["MensajeCambiarContraseña"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["MensajeCambiarContraseña"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
        <h1>CAMBIAR CONTRASEÑA</h1>
        <form asp-action="cambiar_contraseña" asp-controller="Home" method="post">

            <label for="usuario">Correo:</label>
            <input type="text" id="correo" name="correo" class="input-field" required><br>

            <label for="contrasena">Contraseña Actual:</label>
            <input type="password" id="contrasena_Actual" name="contrasena_Actual" class="input-field" required><br>

            <label for="contrasena">Nueva contraseña:</label>
            <input type="password" id="nueva_contrasena" name="nueva_contrasena" class="input-field" required><br>

            <label for="confirmar-contrasena">Confirmar contraseña:</label>
            <input type="password" id="confirmar_contrasena" name="confirmar_contrasena" class="input-field" required><br>

            <button type="submit" class="accept-button">Aceptar</button>
        </form>
    </div>

</body>
</html>
