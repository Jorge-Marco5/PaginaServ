<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recetario</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #000;
            color: #FFF;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            overflow-x: hidden;
        }

        .header {
            background-color: #990000;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            box-sizing: border-box;
        }

        .nav-links {
            display: flex;
            gap: 15px;
        }

        .header a {
            color: #FFF;
            font-size: 18px;
            text-decoration: none;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #2E1A47;
            color: #FFF;
            padding: 10px 0;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(14, 1, 1, 0.2);
            z-index: 1;
            top: 100%;
            left: 0;
            border-radius: 5px;
        }

        .dropdown-content a {
            color: #FFF;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            font-size: 16px;
        }

        .dropdown-content a:hover {
            background-color: #4A2A76;
        }

        .content {
            display: flex;
            justify-content: center;
            align-items: center;
            max-width: 1000px;
            width: 100%;
            padding: 20px;
            box-sizing: border-box;
            gap: 20px;
            margin-top: 50px; /* Espacio entre encabezado y contenido */
        }

        .text-section {
            flex: 1;
            text-align: left;
            padding: 20px;
            max-width: 500px;
            box-sizing: border-box;
        }

        h1 {
            font-size: 40px;
            margin-bottom: 10px;
            font-family: serif;
        }

        p {
            font-size: 18px;
            color: #D3D3D3;
            margin: 20px 0;
        }

        .button {
            background-color: transparent;
            color: #ffffff;
            border: 2px solid #FFD700;
            padding: 10px 30px;
            font-size: 16px;
            border-radius: 20px;
            cursor: pointer;
            transition: background-color 0.3s, color 0.3s;
            text-decoration: none;
            font-weight: bold;
            display: inline-block;
            margin-top: 15px;
        }

        .button:hover {
            background-color: #FFD700;
            color: #000;
        }

        .image-container {
            flex: 1;
            display: flex;
            justify-content: center;
            padding: 30px;
            max-width: 400px;
            box-sizing: border-box;
        }

        .image-container img {
            width: 100%;
            height: auto;
            border-radius: 10px;
            object-fit: cover;
        }

        .contact-icon {
            margin-left: auto;
        }
    </style>
</head>
<body>

    <div class="header">
        <div class="nav-links">
            <a href="#">Inicio</a>
                <div class="dropdown">
                    <a href="#" onclick="toggleDropdown()">Servicio</a>
                    <div class="dropdown-content" id="dropdownMenu">
                        <a asp-controller="Products" asp-action="registrar">Registrar</a>
                        <a asp-controller="Products" asp-action="consultar">Consultar</a>
                    </div>
                            <a asp-controller="Account" asp-action="crear_perfil" class="contact-icon"><img src="@Url.Content("~/images/Account/contacto.png")" alt="Perfil" style="width: 20px; vertical-align: middle;"></a>

                </div>
            </div>
        </div>
        <h1>@ViewBag.UsuarioNombre</h1>
    </div>

    <div class="content">
        <div class="text-section">
            <h1>Recetario</h1>
            <p>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Neque nostrum deleniti alias molestias.</p>
            <a asp-controller="Products" asp-action="registrar" class="button">Menu</a>
        </div>
        <div class="image-container">
            <img src="@Url.Content("~/images/Products/plato.png")" alt="Plato de comida">
        </div>
    </div>

    <script>
        function toggleDropdown() {
            const dropdownMenu = document.getElementById("dropdownMenu");
            dropdownMenu.style.display = dropdownMenu.style.display === "block" ? "none" : "block";
        }

        window.onclick = function(event) {
            if (!event.target.matches('.dropdown a')) {
                const dropdowns = document.getElementsByClassName("dropdown-content");
                for (let i = 0; i < dropdowns.length; i++) {
                    const openDropdown = dropdowns[i];
                    if (openDropdown.style.display === "block") {
                        openDropdown.style.display = "none";
                    }
                }
            }
        }
        function toggleDropdown() {
            const dropdownMenu = document.getElementById("dropdownMenu");
            dropdownMenu.style.display = dropdownMenu.style.display === "block" ? "none" : "block";
        }

    </script>

</body>
</html>
