@{
    ViewData["Title"] = "Ingresar Datos";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ingreso de Datos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #19709a;
        }
        .container {
            margin-top: 50px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Ingresa tus Datos para Generar Menús</h2>
        <form id="usuarioForm" method="post" action="/procesarFormulario">
            @using (Html.BeginForm("Registrar", "Account", FormMethod.Post))
        {
            <div class="mb-3">
                <label for="edad" class="form-label">Edad</label>
                <input required type="number" class="form-control" name="edad" id="edad" placeholder="Ingresa tu edad" >
            </div>
            <div class="mb-3">
                <label for="peso" class="form-label">Peso</label>
                <input required type="number" class="form-control" name="peso" id="peso" placeholder="Ingresa tu peso">
            </div>
            <div class="mb-3">
                <label for="condiciones" class="form-label">Condiciones de Salud</label>
                <input required type="text" class="form-control" name="enfermedad" id="enfermedad" placeholder="">
            </div>
            <div class="mb-3">
                <label for="ingredientes" class="form-label">Ingredientes Disponibles</label>
                <input required type="text" class="form-control" name="ingredientes" id="ingredientes" rows="3" placeholder=""></input>
            </div>
            <button asp-controller="Products" onclick="mostrarDatos()" asp-action="vistaMenus" class="btn btn-success" type="submit">Registrarse</button>
            <!--<a asp-controller="Products" asp-action="vistaMenus" class="btn btn-success">Generar Menús</a>-->
        }
        </form>


    </div>

    <script>
        function mostrarDatos() {
    // Obtiene los valores de cada campo
    let edad = document.getElementById("edad").value;
    let peso = document.getElementById("peso").value;
    let enfermedad = document.getElementById("enfermedad").value;
    let ingredientes = document.getElementById("ingredientes").value;

    // Crea el mensaje para mostrar los datos
    let mensaje = `Datos recibidos:\nEdad: ${edad}\nPeso: ${peso}\nEnfermedad: ${enfermedad}\nIngredientes: ${ingredientes}`;

    // Muestra el mensaje en una alerta
    alert(mensaje);

    // También puedes mostrar el mensaje en un párrafo dentro de la página
    document.getElementById("mensaje").innerText = mensaje;
}

        </script>
        <!--MOSTRAR MEMSAJE-->
        <p style="color: black;" >@ViewData["Mensaje"]</p>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
